<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp" android:focusable="true"
    android:paddingLeft="10dp" android:paddingRight="10dp"
    android:paddingTop="10dp" android:paddingBottom="10dp"
    android:clickable="true" android:background="?android:attr/selectableItemBackground">
    <ImageView android:id = "@+id/trailer_image" android:orientation="horizontal"
        android:layout_height="match_parent" android:layout_gravity="center"
        android:layout_width="0px" android:src="@drawable/play_button"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="0px" android:id = "@+id/trailer_text"
        android:orientation = "horizontal" android:layout_weight="3"
        android:layout_height="match_parent"
        android:textSize="30dp" android:paddingLeft="20dp"
        android:layout_gravity="center" />
</LinearLayout>